<Window x:Class="ChatboxWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chatbox" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox x:Name="ChatList" Grid.Row="0" Margin="10" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="MessageBox" Width="250" Height="30" />
            <Button Content="Send" Width="80" Height="30" Margin="10,0,0,0" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>
